<UserControl x:Class="Projet.Wpf.View.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:Projet.Wpf.View"
      xmlns:converters="clr-namespace:Projet.Wpf.View.Converters"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <!-- Converters -->
        <converters:BlockedPackageConverter x:Key="BlockedPackageConverter"/>
        <converters:CryptoExtensionConverter x:Key="CryptoExtensionConverter"/>
        <converters:PriorityExtensionConverter x:Key="PriorityExtensionConverter"/>
        
        <!-- ScrollBar Style -->
        <Style x:Key="CustomScrollBarStyle" TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="#33FFFFFF"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="GridRoot" Width="12" Background="{TemplateBinding Background}">
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.PageUpCommand}" Opacity="0" Focusable="False"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.PageDownCommand}" Opacity="0" Focusable="False"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{DynamicResource CustomThumbStyle}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Horizontal ScrollBar Style -->
        <Style x:Key="CustomHorizontalScrollBarStyle" TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="GridRoot" Height="16" Background="Transparent" SnapsToDevicePixels="True">
                            <Border CornerRadius="8" Background="#33FFFFFF" Margin="15,0,15,0"/>
                            <Track x:Name="PART_Track" Orientation="Horizontal" Margin="15,0,15,0">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.LineLeftCommand}" Opacity="0" Focusable="False"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.LineRightCommand}" Opacity="0" Focusable="False"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{DynamicResource CustomHorizontalThumbStyle}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="CustomThumbStyle" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Rectangle Fill="#7428D7" RadiusX="6" RadiusY="6" Margin="2,0,2,0" MinHeight="30"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="CustomHorizontalThumbStyle" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Rectangle Fill="#7428D7" RadiusX="8" RadiusY="8" Margin="0,1,0,1" MinWidth="100"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="CustomScrollViewerStyle" TargetType="{x:Type ScrollViewer}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollViewer}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <ScrollContentPresenter Grid.Column="0" Grid.Row="0" Margin="0,0,0,0"/>
                            
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                                       Grid.Column="1" Grid.Row="0"
                                       Value="{TemplateBinding VerticalOffset}"
                                       Maximum="{TemplateBinding ScrollableHeight}"
                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                       Style="{DynamicResource CustomScrollBarStyle}"/>
                            
                            <ScrollBar x:Name="PART_HorizontalScrollBar"
                                       Orientation="Horizontal"
                                       Grid.Column="0" Grid.Row="1"
                                       Value="{TemplateBinding HorizontalOffset}"
                                       Maximum="{TemplateBinding ScrollableWidth}"
                                       ViewportSize="{TemplateBinding ViewportWidth}"
                                       Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                       Style="{DynamicResource CustomHorizontalScrollBarStyle}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Button Styles -->
        <Style x:Key="CircularButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="Transparent">
                            <Viewbox Width="20" Height="20">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="#FFCC4444" Data="M6,19c0,1.1,0.9,2,2,2h8c1.1,0,2-0.9,2-2V7H6V19z M19,4h-3.5l-1-1h-5l-1,1H5v2h14V4z"/>
                                </Canvas>
                            </Viewbox>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- TextBox Style -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Padding="{TemplateBinding Padding}"
                                          Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Category Title Style -->
        <Style x:Key="CategoryTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <!-- List Item Style -->
        <Style x:Key="ListItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#33FFFFFF"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
        
        <!-- Item Text Style -->
        <Style x:Key="ItemTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="#FF25234E">
        <!-- Main Layout Grid -->
        <Grid Width="660" HorizontalAlignment="Center">
            <!-- Title -->
            <TextBlock Text="Settings" 
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#CCFFFFFF"
                       Opacity="0.8"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Top"
                       Margin="0,10,0,0"/>
            
            <!-- Scrollable Container -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Auto"
                          Margin="0,50,0,0"
                          Style="{StaticResource CustomScrollViewerStyle}">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <!-- Blocking Programs Section -->
                    <Border Background="#FF302E66" 
                            CornerRadius="15" 
                            Padding="20"
                            Margin="0,0,15,0"
                            Width="280"
                            Height="360"
                            VerticalAlignment="Top">
                        <DockPanel>
                            <!-- Section Title -->
                            <TextBlock Text="Blocking Programs" 
                                       Style="{StaticResource CategoryTitleStyle}"
                                       DockPanel.Dock="Top"/>
                            
                            <!-- Input Area -->
                            <Grid DockPanel.Dock="Top" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox x:Name="BlockingProgramInput"
                                         Grid.Column="0"
                                         Background="#CC19173D"
                                         BorderBrush="#7F19173D"
                                         Foreground="#7B78AA"
                                         BorderThickness="0"
                                         Padding="10"
                                         Text="Process Name" 
                                         Tag="Process Name" 
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBox_LostFocus"
                                         Height="40" 
                                         FontSize="14"
                                         Style="{StaticResource RoundedTextBoxStyle}"/>
                                         
                                <Button Grid.Column="1" 
                                        Content="+" 
                                        Width="40" 
                                        Height="40"
                                        Background="#7428D7"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Style="{StaticResource CircularButtonStyle}"
                                        Command="{Binding AddBlockingProgramCommand}"
                                        CommandParameter="{Binding ElementName=BlockingProgramInput, Path=Text}"
                                        Click="AddBlockingProgram_Click"
                                        Margin="10,0,0,0"/>
                            </Grid>
                            
                            <!-- List of Items -->
                            <ScrollViewer DockPanel.Dock="Top" 
                                          VerticalScrollBarVisibility="Auto" 
                                          Height="260"
                                          Style="{StaticResource CustomScrollViewerStyle}">
                                <ItemsControl ItemsSource="{Binding BlockedPackages}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource ListItemStyle}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding}" 
                                                               Style="{StaticResource ItemTextStyle}"/>
                                                               
                                                    <Button Grid.Column="1" 
                                                            Style="{StaticResource DeleteButtonStyle}"
                                                            Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                                            CommandParameter="{Binding Converter={StaticResource BlockedPackageConverter}}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </DockPanel>
                    </Border>
                    
                    <!-- Encrypt Extensions Section -->
                    <Border Background="#FF302E66" 
                            CornerRadius="15" 
                            Padding="20"
                            Margin="0,0,15,0"
                            Width="280"
                            Height="360"
                            VerticalAlignment="Top">
                        <DockPanel>
                            <!-- Section Title -->
                            <TextBlock Text="Extensions to Encrypt" 
                                       Style="{StaticResource CategoryTitleStyle}"
                                       DockPanel.Dock="Top"/>
                            
                            <!-- Input Area -->
                            <Grid DockPanel.Dock="Top" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox x:Name="ExtensionInput"
                                         Grid.Column="0"
                                         Background="#CC19173D"
                                         BorderBrush="#7F19173D"
                                         Foreground="#7B78AA"
                                         BorderThickness="0"
                                         Padding="10"
                                         Text="File extension name (.txt)" 
                                         Tag="File extension name (.txt)" 
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBox_LostFocus"
                                         Height="40" 
                                         FontSize="14"
                                         Style="{StaticResource RoundedTextBoxStyle}"/>
                                         
                                <Button Grid.Column="1" 
                                        Content="+" 
                                        Width="40" 
                                        Height="40"
                                        Background="#7428D7"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Style="{StaticResource CircularButtonStyle}"
                                        Command="{Binding AddExtensionCommand}"
                                        CommandParameter="{Binding ElementName=ExtensionInput, Path=Text}"
                                        Click="AddExtension_Click"
                                        Margin="10,0,0,0"/>
                            </Grid>
                            
                            <!-- List of Items -->
                            <ScrollViewer DockPanel.Dock="Top" 
                                          VerticalScrollBarVisibility="Auto" 
                                          Height="260"
                                          Style="{StaticResource CustomScrollViewerStyle}">
                                <ItemsControl ItemsSource="{Binding CryptoExtensions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource ListItemStyle}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding}" 
                                                               Style="{StaticResource ItemTextStyle}"/>
                                                               
                                                    <Button Grid.Column="1" 
                                                            Style="{StaticResource DeleteButtonStyle}"
                                                            Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                                            CommandParameter="{Binding Converter={StaticResource CryptoExtensionConverter}}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </DockPanel>
                    </Border>
                    
                    <!-- Priority Extensions Section -->
                    <Border Background="#FF302E66" 
                            CornerRadius="15" 
                            Padding="20"
                            Margin="0,0,0,0"
                            Width="280"
                            Height="360"
                            VerticalAlignment="Top">
                        <DockPanel>
                            <!-- Section Title -->
                            <TextBlock Text="Priority Extensions" 
                                       Style="{StaticResource CategoryTitleStyle}"
                                       DockPanel.Dock="Top"/>
                            
                            <!-- Input Area -->
                            <Grid DockPanel.Dock="Top" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox x:Name="PriorityExtensionInput"
                                         Grid.Column="0"
                                         Background="#CC19173D"
                                         BorderBrush="#7F19173D"
                                         Foreground="#7B78AA"
                                         BorderThickness="0"
                                         Padding="10"
                                         Text="File extension name (.txt)" 
                                         Tag="File extension name (.txt)" 
                                         GotFocus="TextBox_GotFocus"
                                         LostFocus="TextBox_LostFocus"
                                         Height="40" 
                                         FontSize="14"
                                         Style="{StaticResource RoundedTextBoxStyle}"/>
                                         
                                <Button Grid.Column="1" 
                                        Content="+" 
                                        Width="40" 
                                        Height="40"
                                        Background="#7428D7"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Style="{StaticResource CircularButtonStyle}"
                                        Command="{Binding AddPriorityExtensionCommand}"
                                        CommandParameter="{Binding ElementName=PriorityExtensionInput, Path=Text}"
                                        Click="AddPriorityExtension_Click"
                                        Margin="10,0,0,0"/>
                            </Grid>
                            
                            <!-- List of Items -->
                            <ScrollViewer DockPanel.Dock="Top" 
                                          VerticalScrollBarVisibility="Auto" 
                                          Height="260"
                                          Style="{StaticResource CustomScrollViewerStyle}">
                                <ItemsControl ItemsSource="{Binding PriorityExtensions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Style="{StaticResource ListItemStyle}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding}" 
                                                               Style="{StaticResource ItemTextStyle}"/>
                                                               
                                                    <Button Grid.Column="1" 
                                                            Style="{StaticResource DeleteButtonStyle}"
                                                            Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                                            CommandParameter="{Binding Converter={StaticResource PriorityExtensionConverter}}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </DockPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>