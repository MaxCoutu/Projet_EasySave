<Window x:Class="Projet.Wpf.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Projet.ViewModel"
        Title="EasySave" Height="400" Width="600">
	<Window.DataContext>
		<vm:MainViewModel />
	</Window.DataContext>

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock Text="Liste des tâches" FontSize="18" Margin="0,0,0,10"/>
		<ListBox ItemsSource="{Binding Jobs}" SelectedItem="{Binding SelectedJob}" DisplayMemberPath="Name" Grid.Row="1" />

		<StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0" HorizontalAlignment="Center" >
			<Button Content="Ajouter" Width="100" Margin="5" Command="{Binding AddJobCmd}" />
			<Button Content="Supprimer" Width="100" Margin="5" Command="{Binding RemoveJobCmd}" />
			<Button Content="Lancer" Width="100" Margin="5" Command="{Binding RunSelectedCmd}" />
			<Button Content="Tout lancer" Width="100" Margin="5" Command="{Binding RunAllCmd}" />
		</StackPanel>
	</Grid>
</Window>
