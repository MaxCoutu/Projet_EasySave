<Window x:Class="Projet.Wpf.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet.Wpf.View"
        mc:Ignorable="d"
        Title="EasySave" Height="450" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:FolderNameConverter x:Key="FolderNameConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Liste des sauvegardes" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Jobs}"
                  SelectedItem="{Binding SelectedJob, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding Name}" Width="2*"/>
                <DataGridTextColumn Header="Dossier"
                                    Binding="{Binding SourceDir, Converter={StaticResource FolderNameConverter}}" Width="2*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Strategy.Type}" Width="*"/>
                <DataGridTemplateColumn Header="Lancer" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Lancer"
                                    Command="{Binding DataContext.RunJobCmd, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Supprimer" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Supprimer"
                                    Command="{Binding DataContext.DeleteJobCmd, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <DockPanel Grid.Row="2">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <Button Content="Ajouter" Width="100" Command="{Binding ShowAddJobViewCommand}" />
                <Button Content="Supprimer" Width="100" Command="{Binding ShowRemoveJobViewCommand}" />
            </StackPanel>
            <ContentControl Content="{Binding CurrentViewModel}" />
        </DockPanel>
    </Grid>
</Window>
