                            </Viewbox>
                        </Button>
                        <Button Background="Transparent" BorderThickness="0"
                                Cursor="Hand"
                                Command="{Binding SetFrenchCommand}"
                                Margin="60,0,0,0">
                                <Viewbox Width="45" Height="43">
                                    <Canvas Width="36" Height="36">
                                        <Path Data="M36 27a4 4 0 0 1-4 4h-8V5h8a4 4 0 0 1 4 4v18z" Fill="#ED2939"/>
                                        <Path Data="M4 5a4 4 0 0 0-4 4v18a4 4 0 0 0 4 4h8V5H4z" Fill="#002495"/>
                                        <Path Data="M12 5h12v26H12z" Fill="#EEE"/>
                                    </Canvas>
                                </Viewbox>
                        </Button>
                        <Button Background="Transparent" BorderThickness="0"
                                Cursor="Hand"
                                Command="{Binding SetEnglishCommand}"
                                Margin="10,0,0,0">
                                <Viewbox Width="45" Height="42">
                                    <Canvas Width="28" Height="18" Margin="0,-2,0,0">
                                        <Canvas.Clip>
                                            <RectangleGeometry Rect="0,0,28,20" RadiusX="2" RadiusY="2"/>
                                        </Canvas.Clip>
                                        <Rectangle Width="28" Height="20" Fill="#0A17A7"/>
                                        <Path Data="M-1.28244 -1.91644 L10.6667 6.14335 V-1.33333 H17.3334 V6.14335 L29.2825 -1.91644 L30.7737 0.294324 L21.3263 6.66667 H28 V13.3333 H21.3263 L30.7737 19.7057 L29.2825 21.9165 L17.3334 13.8567 V21.3333 H10.6667 V13.8567 L-1.28244 21.9165 L-2.77362 19.7057 L6.67377 13.3333 H2.95639e-05 V6.66667 H6.67377 L-2.77362 0.294324 L-1.28244 -1.91644 Z" Fill="White"/>
                                        <Path Data="M18.668 6.33219 L31.3333 -2" Stroke="#DB1F35" StrokeThickness="0.666667" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                        <Path Data="M20.0128 13.6975 L31.3666 21.3503" Stroke="#DB1F35" StrokeThickness="0.666667" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                        <Path Data="M8.00555 6.31046 L-3.83746 -1.67099" Stroke="#DB1F35" StrokeThickness="0.666667" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                        <Path Data="M9.29006 13.6049 L-3.83746 22.3105" Stroke="#DB1F35" StrokeThickness="0.666667" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                        <Path Data="M0 12 H12 V20 H16 V12 H28 V8 H16 V0 H12 V8 H0 V12 Z" Fill="#E6273E"/>
                                    </Canvas>
                                </Viewbox>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- MAIN PANEL -->
                <Border Grid.Column="1"
                        Background="#FF25234E"
                        CornerRadius="15"
                        Padding="20"
                        BorderBrush="#FF3B3A5E"
                        BorderThickness="1"
                        Margin="30,10,0,10">
                    <ScrollViewer VerticalScrollBarVisibility="Disabled">
                        <StackPanel>
                            <!-- Title -->
                            <TextBlock Text="{loc:Loc recent_title}"
                                       FontSize="40"
                                       FontWeight="Bold"
                                       Foreground="#CCFFFFFF"
                                       Opacity="0.8"
                                       Margin="0,0,0,20"
                                       HorizontalAlignment="Center"/>

                            <!-- Items list -->
                            <ItemsControl ItemsSource="{Binding RecentJobs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12"
                                                Background="#FF33345A"
                                                Margin="0,0,0,10"
                                                Padding="15">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Row="0">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Name}"
                                                                   FontSize="18"
                                                                   FontWeight="Bold"
                                                                   Foreground="White"/>
                                                        <TextBlock Text="{Binding Strategy.Type}"
                                                                   FontSize="18"
                                                                   FontStyle="Italic"
                                                                   Foreground="#CCCCCC"
                                                                   Margin="25,0,0,0"/>
                                                    </StackPanel>

                                                    <TextBlock FontSize="12"
                                                               Opacity="0.7"
                                                               TextWrapping="Wrap"
                                                               Margin="0,10,0,5">
                                                        <Run Text="{loc:Loc src_label}"/>
                                                        <Run Text=" "/>
                                                        <Run Text="{Binding SourceDir, Converter={StaticResource FolderNameConverter}}"/>
                                                    </TextBlock>

                                                    <TextBlock FontSize="12"
                                                               Opacity="0.7"
                                                               TextWrapping="Wrap">
                                                        <Run Text="{loc:Loc dst_label}"/>
                                                        <Run Text=" "/>
                                                        <Run Text="{Binding TargetDir, Converter={StaticResource FolderNameConverter}}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                                
                                                <!-- Barre de progression pour le job en cours -->
                                                <Grid x:Name="ProgressPanel" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,10,0,0"
                                                      Visibility="{Binding Path=State, Converter={StaticResource ProgressToVisibilityConverter}}">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <ProgressBar Grid.Row="0" Height="15" 
                                                                 Minimum="0" Maximum="1" 
                                                                 Value="{Binding Progression}"
                                                                 Foreground="#FF7428D7" 
                                                                 Background="#33FFFFFF"
                                                                 BorderThickness="0"
                                                                 Style="{StaticResource RoundedProgressBar}"/>
                                                                 
                                                    <TextBlock Grid.Row="1" Margin="0,5,0,0" FontSize="11" Foreground="#CCCCCC">
                                                        <Run Text="{Binding Progression, StringFormat=\{0:P0\}}"/>
                                                        <Run Text=" - "/>
                                                        <Run Text="{Binding State}"/>
                                                        <Run Text=" - fichiers copiés: "/>
                                                        <Run FontWeight="Bold" Foreground="#AAFFAA" 
                                                             Text="{Binding ., Converter={StaticResource ProgressToVisibilityConverter}, ConverterParameter=calculate-copied}"/>
                                                        <Run Text="/"/>
                                                        <Run Text="{Binding TotalFilesToCopy}"/>
                                                        <Run Text=" - "/>
                                                        <Run Text="{Binding TotalFilesSize, StringFormat=\{0\} octets}"/>
                                                    </TextBlock>
                                                </Grid>

                                                <Button Grid.Column="1" Grid.Row="0"
                                                        Width="25" Height="25"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        Command="{Binding DataContext.RunJobCmd, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip="{loc:Loc play_tooltip}">
                                                    <Path Data="M0,0 L0,20 L18,10 Z"
                                                          Fill="White"
                                                          Stretch="Uniform"/>
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <!-- Contenu principal -->
        <ContentControl x:Name="MainContentControl"
                        Content="{Binding CurrentViewModel}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate" Value="{StaticResource MainViewTemplate}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentViewModel, Converter={x:Static local:ViewModelTypeConverter.Instance}}" Value="AddJobViewModel">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Border Background="#FF25234E"
                                                Width="700" Height="400"
                                                CornerRadius="15"
                                                Padding="20"
                                                BorderBrush="#FF3B3A5E"
                                                BorderThickness="1"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                            <ContentPresenter Content="{Binding}"/>
                                        </Border>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding CurrentViewModel, Converter={x:Static local:ViewModelTypeConverter.Instance}}" Value="ChooseJobViewModel">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Border Background="#FF25234E"
                                                Width="700" Height="400"
                                                CornerRadius="15"
                                                Padding="20"
                                                BorderBrush="#FF3B3A5E"
                                                BorderThickness="1"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                            <ContentPresenter Content="{Binding}"/>
                                        </Border>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

        <!-- Bouton Retour -->
        <Button Command="{Binding ReturnToMainViewCommand}" 
                Cursor="Hand"
                Height="50" Width="50" 
                Background="Transparent"
                BorderThickness="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="50,0,0,30">
            <Button.Style>
                <Style TargetType="Button" BasedOn="{StaticResource BackButtonStyle}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CurrentViewModel, Converter={x:Static local:ViewModelTypeConverter.Instance}}" Value="AddJobViewModel">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding CurrentViewModel, Converter={x:Static local:ViewModelTypeConverter.Instance}}" Value="ChooseJobViewModel">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Viewbox Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid Width="32" Height="32">
                    <Path Data="M16,30 C8.268,30 2,23.73 2,16 C2,8.27 8.268,2 16,2 C23.732,2 30,8.27 30,16 C30,23.73 23.732,30 16,30 Z M16,0 C7.163,0 0,7.16 0,16 C0,24.84 7.163,32 16,32 C24.837,32 32,24.84 32,16 C32,7.16 24.837,0 16,0 Z M20.535,7.46 C20.145,7.07 19.512,7.07 19.121,7.46 L11.465,15.12 C11.225,15.36 11.15,15.69 11.205,16 C11.15,16.31 11.225,16.64 11.465,16.88 L19.121,24.54 C19.512,24.93 20.145,24.93 20.535,24.54 C20.926,24.14 20.926,23.51 20.535,23.12 L13.414,16 L20.535,8.88 C20.926,8.49 20.926,7.86 20.535,7.46 Z" 
                          Fill="White" />
                </Grid>
            </Viewbox>
        </Button>
    </Grid>
</Window>