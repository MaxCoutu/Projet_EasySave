<Window x:Class="Projet.Wpf.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet.Wpf.View"
        xmlns:viewmodel="clr-namespace:Projet.ViewModel;assembly=Project-EasySave"
        mc:Ignorable="d"
        Title="EasySave" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock Text="Liste des sauvegardes" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>

		<ListBox Grid.Row="1"
                 ItemsSource="{Binding BackupJobs}"
                 DisplayMemberPath="Name"
                 SelectedItem="{Binding SelectedJob}"
                 Margin="0 0 0 10"/>

		<DockPanel>
			<!-- Boutons en haut -->
			<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
				<Button Content="Ajouter" Width="100" Command="{Binding ShowAddJobViewCommand}" />
				<Button Content="Supprimer" Width="100" Command="{Binding ShowRemoveJobViewCommand}" />
			</StackPanel>

			<!-- Vue dynamique ici -->
			<ContentControl Content="{Binding CurrentViewModel}" />
		</DockPanel>
	</Grid>
</Window>
