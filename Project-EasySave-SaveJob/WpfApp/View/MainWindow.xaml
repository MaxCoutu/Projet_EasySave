<Window x:Class="Projet.Wpf.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Projet.Wpf.Localization"
        xmlns:local="clr-namespace:Projet.Wpf.View"
        Title="{loc:Loc menu_title}"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#FF19173D"
        Foreground="White">

    <Window.Resources>
        <local:FolderNameConverter x:Key="FolderNameConverter"/>
        <local:ProgressToVisibilityConverter x:Key="ProgressToVisibilityConverter"/>

        <!-- Style for settings icon paths -->
        <Style x:Key="SettingsPathStyle" TargetType="Path">
            <Setter Property="Stroke" Value="White"/>
            <Setter Property="StrokeThickness" Value="1.5"/>
        </Style>

        <!-- ProgressBar-->
        <Style x:Key="RoundedProgressBar" TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid MinHeight="15">
                            <Border CornerRadius="7" Background="{TemplateBinding Background}"/>
                            <Border x:Name="PART_Track" CornerRadius="7" Background="{TemplateBinding Background}"/>
                            <Border x:Name="PART_Indicator" CornerRadius="7" Background="{TemplateBinding Foreground}" 
                                    HorizontalAlignment="Left"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style boutons arrondis -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Height" Value="85"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Black"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="Opacity" Value="0.8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour le bouton Retour -->
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataTemplate pour la vue principale -->
        <DataTemplate x:Key="MainViewTemplate">
            <Grid Margin="30,20,20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="299"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- SIDEBAR -->
                <StackPanel Grid.Column="0" Margin="0,74,4,0">
                    <!-- Create -->
                    <Button Style="{StaticResource RoundedButton}"
                            Background="#FF7428D7"
                            Cursor="Hand"
                            Command="{Binding ShowAddJobViewCommand}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{loc:Loc menu_create}"
                                       Width="180" TextWrapping="Wrap"/>
                                       <Viewbox Width="57" Height="57" Margin="10,0,0,0">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M8 9.00006 H6.2 C5.0799 9.00006 4.51984 9.00006 4.09202 9.21805 C3.71569 9.40979 3.40973 9.71575 3.21799 10.0921 C3 10.5199 3 11.08 3 12.2001 V17.8001 C3 18.9202 3 19.4802 3.21799 19.908 C3.40973 20.2844 3.71569 20.5903 4.09202 20.7821 C4.51984 21.0001 5.07989 21.0001 6.2 21.0001 H17.787 C18.9071 21.0001 19.4671 21.0001 19.895 20.7821 C20.2713 20.5903 20.5772 20.2844 20.769 19.908 C20.987 19.4802 20.987 18.9202 20.987 17.8001 V12.0001 M6 15.0001 H6.01 M10 15 H10.01 M11.5189 12.8946 L12.8337 12.6347 C13.5432 12.4945 13.8979 12.4244 14.2287 12.2953 C14.5223 12.1807 14.8013 12.0318 15.06 11.8516 C15.3514 11.6487 15.607 11.393 16.1184 10.8816 L21.2668 5.73321 C21.9541 5.04596 21.9541 3.9317 21.2668 3.24444 C20.5796 2.55719 19.4653 2.55719 18.7781 3.24445 L13.5416 8.48088 C13.0625 8.96004 12.8229 9.19963 12.6294 9.47121 C12.4576 9.71232 12.3131 9.97174 12.1986 10.2447 C12.0696 10.5522 11.9921 10.8821 11.837 11.5417 L11.5189 12.8946 Z" Stroke="White" StrokeThickness="2" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                        </Canvas>
                                    </Viewbox>
                        </StackPanel>
                    </Button>

                    <!-- Choose -->
                    <Button Style="{StaticResource RoundedButton}"
                            Background="#FF0E73C5"
                            Cursor="Hand"
                            Command="{Binding ShowChooseJobViewCommand}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{loc:Loc menu_choose}"
                                       Width="180" TextWrapping="Wrap"/>
                                       <Viewbox Width="57" Height="57" Margin="10,0,0,0">
                                        <Canvas Width="16" Height="16">
                                            <Path Data="M8.16923 2.00234 C8.11301 2.00078 8.0566 2 8 2 C4.68629 2 2 4.68629 2 8 C2 11.3137 4.68629 14 8 14 C11.3137 14 14 11.3137 14 8 C14 7.9434 13.9992 7.88699 13.9977 7.83077 L15.7642 6.06422 C15.9182 6.68407 16 7.33249 16 8 C16 12.4183 12.4183 16 8 16 C3.58172 16 0 12.4183 0 8 C0 3.58172 3.58172 0 8 0 C8.66751 0 9.31593 0.0817526 9.93578 0.235791 L8.16923 2.00234 Z" Fill="White"/>
