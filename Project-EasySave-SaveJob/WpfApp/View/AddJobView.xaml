<UserControl x:Class="Projet.Wpf.View.AddJobView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nom de la tâche" Grid.Row="0" />
        <TextBox Text="{Binding Builder.Name}" Grid.Row="1" Margin="0,5,0,10" />

        <TextBlock Text="Dossier source" Grid.Row="2"/>
        <TextBox Text="{Binding Builder.SourceDir}" Grid.Row="3" Margin="0,5,0,10" />

        <TextBlock Text="Dossier cible" Grid.Row="4"/>
        <TextBox Text="{Binding Builder.TargetDir}" Grid.Row="5" Margin="0,5,0,10" />

        <TextBlock Text="Type de sauvegarde (Full/Diff)" Grid.Row="6"/>
        <ComboBox SelectedItem="{Binding Builder.Type}" Grid.Row="7" Margin="0,5,0,10">
            <ComboBoxItem Content="Full" />
            <ComboBoxItem Content="Diff" />
        </ComboBox>

        <Button Content="Créer la tâche" Command="{Binding ConfirmCommand}" Grid.Row="8" Height="30" Margin="0,20,0,0"/>
    </Grid>
</UserControl>