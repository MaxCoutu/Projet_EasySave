<UserControl x:Class="Projet.Wpf.View.AddJobView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <!-- Style pour TextBox arrondi avec texte aligné à gauche -->
        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0,0,0"/>
            <Setter Property="Foreground" Value="#CC7B78AA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <!-- Placeholder -->
                            <TextBlock x:Name="Watermark"
                                       Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                       Foreground="#CC7B78AA"
                                       Opacity="0.5"
                                       Padding="10,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Hidden"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Afficher le placeholder quand le champ est vide -->
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <!-- Cacher le placeholder quand le champ a le focus -->
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour le bouton arrondi -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <!-- Titre de la vue d'ajout -->
        <TextBlock Text="Create a Backup job"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#CCFFFFFF"
                   Opacity="0.8"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Le formulaire lui-même -->
        <Grid Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="141*"/>
                <ColumnDefinition Width="121*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row="1" Margin="0,5,0,10" Grid.ColumnSpan="2" 
                     Height="40" VerticalAlignment="Center" Background="#CC19173D" 
                     Foreground="#7B78AA" BorderBrush="#7F19173D" Opacity="1" 
                     Style="{StaticResource RoundedTextBox}" SelectionOpacity="1"
                     Tag="Backup Name" Text="{Binding Builder.Name, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBox Grid.Row="3" Margin="0,5,0,10" Grid.ColumnSpan="2" 
                     Background="#CC19173D" BorderBrush="#7F19173D" Height="40" 
                     Foreground="#7B78AA" Opacity="1" 
                     Style="{StaticResource RoundedTextBox}" SelectionOpacity="1"
                     Tag="Source Directory" Text="{Binding Builder.SourceDir, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBox Grid.Row="5" Margin="0,5,0,10" Grid.ColumnSpan="2" 
                     Background="#CC19173D" BorderBrush="#7F19173D" Height="40" 
                     Foreground="#7B78AA" Opacity="1" 
                     Style="{StaticResource RoundedTextBox}" SelectionOpacity="1"
                     Tag="Target Directory" Text="{Binding Builder.TargetDir, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBox Grid.Row="7" Margin="0,5,0,10" Grid.ColumnSpan="2" 
                     Background="#CC19173D" BorderBrush="#7F19173D" Height="40" 
                     Foreground="#7B78AA" Opacity="1" 
                     Style="{StaticResource RoundedTextBox}" SelectionOpacity="1"
                     Tag="Type (Full/Diff)" Text="{Binding Builder.Type, UpdateSourceTrigger=PropertyChanged}"/>

            <Button Command="{Binding ConfirmCommand}"
                    Grid.Row="8"
                    Height="50"
                    Width="200"
                    Margin="0,20,0,0"
                    Background="#00C287"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0" Grid.ColumnSpan="2"
                  
                    Style="{StaticResource RoundedButton}">
                <Image Source="C:\Users\jmail\Downloads\plus-svgrepo-com.png" 
                       Width="20" Height="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Button>
        </Grid>
    </StackPanel>
</UserControl>