<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Projet.Wpf.View;assembly=WpfApp"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Jobs Overview" Height="500" Width="900" Background="#f5f7fa">
    <Window.Resources>
        <converters:ProgressToVisibilityConverter x:Key="ProgressToVisibilityConverter"/>
        <converters:JobStateToVisibilityConverter x:Key="JobStateToVisibilityConverter"/>

        <Style x:Key="RoundedProgressBar" TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid MinHeight="15">
                            <Border CornerRadius="7" Background="{TemplateBinding Background}"/>
                            <Border x:Name="PART_Track" CornerRadius="7" Background="{TemplateBinding Background}"/>
                            <Border x:Name="PART_Indicator" CornerRadius="7" Background="{TemplateBinding Foreground}"
                                    HorizontalAlignment="Left"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="ClickMode" Value="Press"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#44FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#88FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Border CornerRadius="10" Background="White" Padding="15"
                BorderBrush="#ddd" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>

            <ListView ItemsSource="{Binding Jobs}"
                      AlternationCount="2"
                      Margin="0"
                      HorizontalContentAlignment="Stretch">

                <ListView.Resources>
                    <!-- Zébrage -->
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#f0f2f5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e3ebf6"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.Resources>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="State" DisplayMemberBinding="{Binding State}" Width="100"/>

                        <!-- Barre de progression custom -->
                        <GridViewColumn Header="Progression" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid x:Name="ProgressPanel" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,10,0,0"
                                                      Visibility="{Binding Path=State, Converter={StaticResource ProgressToVisibilityConverter}}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <ProgressBar Grid.Row="0" Height="15"
                                            Minimum="0" Maximum="1"
                                            Value="{Binding Progression}"
                                            Foreground="#FF7428D7"
                                            Background="#33FFFFFF"
                                            BorderThickness="0"
                                            Style="{StaticResource RoundedProgressBar}"/>


                                        <TextBlock Grid.Row="1" Margin="0,5,0,0" FontSize="11" Foreground="Black">
											<Run Text="{Binding Progression, StringFormat=\{0:P0\}}"/>

                                        </TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Action" Width="400">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Button play -->
                                        <Border Grid.Column="0" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Width="26" Height="26"
                                            x:Name="PlayButtonContainer"
                                            Visibility="{Binding State, Converter={StaticResource ProgressToVisibilityConverter}, ConverterParameter=Play}">
                                            <Button Style="{StaticResource {x:Type Button}}"
                                                Command="{Binding DataContext.RunJobCmd, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}">
                                                <Button.Content>
                                                    <Viewbox Width="16" Height="16">
                                                        <Path Data="M0,0 L0,20 L18,10 Z"
                                                            Fill="Gray"
                                                            Stretch="Uniform"/>
                                                    </Viewbox>
                                                </Button.Content>
                                            </Button>
                                        </Border>

                                        <!-- Button PauseResume -->
                                        <Border Grid.Column="1" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Width="30" Height="30"
                                            x:Name="PauseButtonContainer"
                                            Background="Transparent"
                                            Visibility="{Binding State, Converter={StaticResource JobStateToVisibilityConverter}, ConverterParameter=PauseResume}">
                                            <Button Style="{StaticResource ControlButtonStyle}"
                                                Command="{Binding DataContext.PauseResumeJobCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Pause/Resume"
                                                Tag="{Binding State}"
                                                Click="ControlButton_Click">
                                                <Path Stroke="Gray" 
                                                    StrokeThickness="2"
                                                    Fill="Transparent">
                                                    <Path.Style>
                                                        <Style TargetType="Path">
                                                            <Setter Property="Data" Value="M4,2 L4,14 L10,14 L10,2 z M14,2 L14,14 L20,14 L20,2 z" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding State}" Value="PAUSED">
                                                                    <Setter Property="Data" Value="M8,5 L8,19 L19,12 z" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Path.Style>
                                                </Path>
                                            </Button>
                                        </Border>
                                        
                                        <!-- Button Stop -->
                                        <Border Grid.Column="2" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Width="30" Height="30"
                                            Background="Transparent"
                                            x:Name="StopButtonContainer"
                                            Visibility="{Binding State, Converter={StaticResource JobStateToVisibilityConverter}, ConverterParameter=Stop}">
                                            <Button  Style="{StaticResource ControlButtonStyle}"
                                                    Command="{Binding DataContext.StopJobCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Stop"
                                                    Tag="{Binding State}"
                                                    Click="ControlButton_Click">
                                                        <Path Data="M2,2 L22,2 L22,22 L2,22 z"
                                                            Stroke="Gray"
                                                            StrokeThickness="2"
                                                            Fill="Transparent"/>
                                            </Button>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
    </Grid>
</Window>
