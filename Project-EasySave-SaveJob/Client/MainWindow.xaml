<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:Projet.Wpf.View;assembly=WpfApp"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Jobs Overview" Height="500" Width="900" Background="#f5f7fa">

    <Window.Resources>
        <converters:ProgressToVisibilityConverter x:Key="ProgressToVisibilityConverter"/>
        <Style x:Key="RoundedProgressBar" TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid MinHeight="15">
                            <Border CornerRadius="7" Background="{TemplateBinding Background}"/>
                            <Border x:Name="PART_Track" CornerRadius="7" Background="{TemplateBinding Background}"/>
                            <Border x:Name="PART_Indicator" CornerRadius="7" Background="{TemplateBinding Foreground}" HorizontalAlignment="Left"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Border CornerRadius="10" Background="White" Padding="15"
                BorderBrush="#ddd" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>

            <ListView ItemsSource="{Binding Jobs}"
                      AlternationCount="2"
                      Margin="0"
                      HorizontalContentAlignment="Stretch">

                <ListView.Resources>
                    <!-- Zébrage -->
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Style.Triggers>
                            <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                <Setter Property="Background" Value="#f0f2f5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e3ebf6"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.Resources>

                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="State" DisplayMemberBinding="{Binding State}" Width="100"/>

                        <!-- Barre de progression custom -->
                        <GridViewColumn Header="Progression" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,10,0,0"
                                          Visibility="{Binding State, Converter={StaticResource ProgressToVisibilityConverter}}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <ProgressBar Grid.Row="0" Height="15" 
                                                     Minimum="0" Maximum="1" 
                                                     Value="{Binding Progression}"
                                                     Foreground="#FF7428D7" 
                                                     Background="#33FFFFFF"
                                                     BorderThickness="0"
                                                     Style="{StaticResource RoundedProgressBar}"/>

                                        <TextBlock Grid.Row="1" Margin="0,5,0,0" FontSize="11" Foreground="Black"
                                                   Text="{Binding Progression, StringFormat={}{0:P0}}"/>
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="Total Files" DisplayMemberBinding="{Binding TotalFilesToCopy}" Width="100"/>
                        <GridViewColumn Header="Files Left" DisplayMemberBinding="{Binding NbFilesLeftToDo}" Width="100"/>
                        <GridViewColumn Header="Actions" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                                        <Button Content="{Binding PlayPauseLabel}" 
                                                Command="{Binding PlayPauseCommand}" 
                                                Width="60" Height="25" Margin="0,0,5,0"/>
                                        <Button Content="Stop" 
                                                Command="{Binding StopCommand}" 
                                                Width="50" Height="25" />
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
    </Grid>
</Window>
